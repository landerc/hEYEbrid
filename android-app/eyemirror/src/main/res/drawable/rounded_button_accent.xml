<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/TRANSPARENT">
    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/colorAccent" />
            <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape>
            <fill android:width="2dp" android:color="@color/colorAccent" />
            <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
</ripple>
