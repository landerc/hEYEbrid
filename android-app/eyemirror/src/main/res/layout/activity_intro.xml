<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent">


    <de.morrox.fontinator.FontTextView
        android:id="@+id/lblIntro1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:font="UnicaOne-Regular.ttf"
        android:text="You need"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splash"
        android:layout_marginTop="8dp" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/lblIntro2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:font="UnicaOne-Regular.ttf"
        android:text="Choose a Mode"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.62" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/phone"
        android:id="@+id/imageView2"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro1"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.32999998" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro1"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/ic_add_white"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="116dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/glasses"
        android:id="@+id/imageView3"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro1"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintVertical_bias="0.38" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/lblSmartphone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:font="UnicaOne-Regular.ttf"
        android:text="Smartphone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.13"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro1"
        app:layout_constraintVertical_bias="0.75" />

    <de.morrox.fontinator.FontTextView
        android:id="@+id/lblGlasses"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:font="UnicaOne-Regular.ttf"
        android:text="Eye Tracker"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lblIntro2"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro1"
        app:layout_constraintVertical_bias="0.88" />

    <io.blackbox_vision.wheelview.view.WheelView
        android:id="@+id/loop_view"
        android:layout_width="180dp"
        android:layout_height="128dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:canLoop="false"
        app:centerTextColor="#FFFFFF"
        app:drawItemCount="3"
        app:initPosition="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro2"
        app:layout_constraintVertical_bias="0.1"
        app:lineColor="@color/colorPrimary"
        app:textSize="20sp"
        app:topBottomTextColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_done_white_24dp"
        android:id="@+id/continueBtn"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblIntro2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.92"
        android:background="@drawable/rounded_button_primary_dark" />


</android.support.constraint.ConstraintLayout>
